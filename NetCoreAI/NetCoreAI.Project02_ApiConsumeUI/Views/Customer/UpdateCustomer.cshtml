@using NetCoreAI.Project02_ApiConsumeUI.Dtos
@model UpdateCustomerDto

@{
    Layout = null;
}



<form method="post">
    <div class="container">
        <br /><br />
        <input type="hidden" asp-for="Id" />
        <label>Müşteri Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Müşteri Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Müşteri Bakiye</label>
        <input type="text" asp-for="Balance" class="form-control" />
        <br />
        <button class="btn btn-dark">Müşteriyi Güncelle</button>
    </div>
</form>