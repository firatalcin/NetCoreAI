@using NetCoreAI.Project02_ApiConsumeUI.Dtos
@model List<ResultCustomerDto>

<div class="container">
	<br /><br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Adı</th>
			<th>Soyadı</th>
			<th>Bakiye</th>
			<th>Sil</th>
			<th>Güncelle</th>
			
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Surname</td>
				<td>@item.Balance</td>
				<td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-danger">Sil</a></td>
				<td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-warning">Güncelle</a></td>
			</tr>
		}
	</table>
	<td><a href="/Customer/CreateCustomer/" class="btn btn-primary">Ekle</a></td>
</div>